\ 'typescript': ['prettier'],
\ 'typescriptreact': ['prettier'],
\ 'rust': ['rustfmt'],
\ 'python': ['ruff_format'],
\ 'c': ['clang-format'],
\ 'cpp': ['clang-format']
\}

let g:taggedtemplate#tagSyntaxMap = {
\ "wgsl": "wgsl",
\ "html": "html",
\ "css":  "css"
\}
autocmd FileType javascript,javascriptreact,typescript,typescriptreact : call taggedtemplate#applySyntaxMap()
