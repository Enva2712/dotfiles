alias v=vim
alias sudo='sudo -E'
alias ls="ls --color=yes"
alias tmux="tmux -u attach"
alias cb="xclip -i -selection clipboard"
alias cdc="cd \"\$(xclip -o -selection clipboard)\""

export PS1="%{[38;5;200m%}%1/%{[0m%} $ "
export GOPATH="$HOME/code/go"
export PATH="$PATH:/usr/local/go/bin:$HOME/.deno/bin:$HOME/.local/bin"
export PATH="$PATH:$HOME/code/bin:$GOPATH/bin"


export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
# [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
