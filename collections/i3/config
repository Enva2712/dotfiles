set $mod Mod4
set $Alt Mod1
floating_modifier $mod
font xft:Iosevka 16


set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left 30 px
bindsym $mod+Shift+j move down 30 px
bindsym $mod+Shift+k move up 30 px
bindsym $mod+Shift+l move right 30 px

bindsym $mod+Ctrl+j resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+k resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+l resize grow width 5 px or 5 ppt
bindsym $mod+Ctrl+h resize shrink width 5 px or 5 ppt

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8

bindsym $mod+Ctrl+1 move container to workspace $ws1
bindsym $mod+Ctrl+2 move container to workspace $ws2
bindsym $mod+Ctrl+3 move container to workspace $ws3
bindsym $mod+Ctrl+4 move container to workspace $ws4
bindsym $mod+Ctrl+5 move container to workspace $ws5
bindsym $mod+Ctrl+6 move container to workspace $ws6
bindsym $mod+Ctrl+7 move container to workspace $ws7
bindsym $mod+Ctrl+8 move container to workspace $ws8

bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8


# Autostart applications
# TODO: CONFIGURE dex
exec --no-startup-id wal -i /home/enva2712/.config/wallpaper
exec --no-startup-id /home/enva2712/.local/bin/start_polybar
exec --no-startup-id compton -b
exec --no-startup-id start-pulseaudio-x11
exec --no-startup-id xautolock -time 8 -notify 15 -notifier \"notify-send -u low -a Xautolock 'locking in 15 seconds'\" -locker '/home/enva2712/.local/bin/lock -- scrot'


set_from_resource $bg i3wm.color0
set_from_resource $fg i3wm.color7
set_from_resource $focused i3wm.color1
set_from_resource $urgent i3wm.color2
# class                 border		backgr. text	indic.	child_border
client.focused          $fg	$bg	$fg	$bg	$bg
client.focused_inactive $fg	$bg	$fg	$bg	$bg
client.unfocused        $bg	$bg	$fg	$bg	$bg
client.urgent           $urgent	$bg	$fg	$bg	$bg
client.placeholder      $bg	$bg	$fg	$bg	$bg
client.background       $bg


bindsym $mod+9 exec --no-startup-id /home/enva2712/.local/bin/lock -- scrot
bindsym $mod+d exec dmenu_run
bindsym $mod+r exec --no-startup-id /home/enva2712/.local/bin/i3ref
bindsym $mod+Return exec "st -e tmux_start new -A -s Workspace"
bindsym $mod+Shift+Return exec "/home/enva2712/.local/bin/tmux_session_picker"
bindsym $mod+$Alt+Return exec "st"
bindsym $mod+m exec "st -e ncmpcpp"
bindsym $mod+q kill
bindsym $mod+g split h; exec notify-send -a i3 'Tiling horizontally'
bindsym $mod+v split v; exec notify-send -a i3 'Tiling vertically'
bindsym $mod+f fullscreen toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+s sticky toggle
workspace_auto_back_and_forth yes
bindsym $mod+Tab workspace back_and_forth

new_window pixel 5
new_float normal

# set gaps
gaps inner 16
gaps outer 3

for_window [urgent="latest"] focus

gaps inner 30
smart_gaps on
smart_borders on


